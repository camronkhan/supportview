<header>
	<h1 class="h2">Product Search</h1>
</header>

<section class="search-form">
	<%= form_for :products, method: :get do |f| %>
		<div class="input-group input-group-lg">
			<%= label_tag :keywords, nil, class: "sr-only" %>
			<%= text_field_tag :keywords, nil, placeholder: "Product Name", class: "form-control input-lg" %>
			<span class="input-group-btn">
				<%= submit_tag "Find Products", class: "btn btn-primary btn-lg" %>
			</span>
		</div>
	<% end %>
</section>


<section class="search-results">
	<div class="row">
		<div class="col-sm-4 search-results pre-scrollable" style="height:100vh;">
			<h1>Results</h1>
			<ol class="list-group">
				<% @products.each do |product| %>
					<li class="list-group-item media">
						<div class="row">
							<div class="col-xs-4">
								<%= image_tag product.image_url, alt: product.name, class: "img-responsive" %>
							</div>
							<div class="col-xs-8">
								<h2><%= product.name %></h2>
								<h3><%= product.company.name %></h3>
								<h4><%= product.source.location %></h4>
							</div>
						</div>
					</li>
				<% end %>
			</ol>
		</div>
		<div class="col-sm-8 item-information">
			h1
		</div>
	</div>
</section>