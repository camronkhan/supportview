<header>
	<h1 class="h2">Product Search</h1>
</header>

<section class="search-form">
	<%= form_for :products, method: :get do |f| %>
		<div class="input-group input-group-lg">
			<%= label_tag :keywords, nil, class: "sr-only" %>
			<%= text_field_tag :keywords, nil, placeholder: "Product Name", class: "form-control input-lg" %>
			<span class="input-group-btn">
				<%= submit_tag "Find Products", class: "btn btn-primary btn-lg" %>
			</span>
		</div>
	<% end %>
</section>


<section class="search-results">
	<header>
		<h1 class="h3">Results</h1>
	</header>
	<table class="table table-striped">
		<thead>
			<tr>
				<th></th>
				<th>Product Name</th>
				<th>Company</th>
				<th>Source</th>
			</tr>
		</thead>
		<tbody>
			<% @products.each do |product| %>
				<tr>
					<td><%= image_tag product.image_url, size: "100x100", class: "img-responsive" %></td>
					<td><%= product.name %></td>
					<td><%= product.company.name %></td>
					<td><%= product.source.location %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</section>